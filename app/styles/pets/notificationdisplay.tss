    font:{
        fontSize: 10
    },
    textAlign: Titanium.UI.TEXT_ALIGNMENT_LEFT,
    touchEnabled: false
}
"#direction":{
    top: 5,
    visible: false,
    backgroundImage: "/buttons/buttonbg.png",
    width: 180,
    height: 0,
