<Alloy>
	<View class="container" id="add">
		<ScrollView id="dogcontainner" onClick="selectpet">
		</ScrollView>
		<ScrollView id="login_container" >
			<ImageView id="downarrowicon">
			</ImageView>
			<View class="otherLoginView">
				<TextField id="date" onClick="openDatePicker">
					<ImageView id="dateicon">
					</ImageView>
				</TextField>
				<TextField id="time" onClick="openTimePicker">
					<ImageView id="timeicon">
					</ImageView>
				</TextField>
			</View>
			<View class="otherLoginView" id="genderbox" >
				<Label id="genderlbl">
				</Label>
			</View>
			<ImageView id="submit" onClick="onSubmit">
			</ImageView>
		</ScrollView>
	</View>
</Alloy>